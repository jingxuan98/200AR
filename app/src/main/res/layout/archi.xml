<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:background="@drawable/bg"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/furniture"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        app:cardBackgroundColor="#c62147"
        app:cardCornerRadius="22dp"
        app:contentPadding="12dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historical"
        app:layout_constraintVertical_bias="0.926" >

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5sp"
            android:src="@drawable/furniture"
            android:contentDescription="@string/todo">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Furniture"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/animal"
        android:layout_width="185dp"
        android:layout_height="185dp"
        app:cardBackgroundColor="#c62147"
        app:cardCornerRadius="22dp"
        app:contentPadding="12dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/historical"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" >

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5sp"
            android:src="@drawable/dog"
            android:contentDescription="@string/todo">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Animal"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/historical"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="160dp"
        app:cardBackgroundColor="#642f67"
        app:cardCornerRadius="22dp"
        app:contentPadding="12dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5sp"
            android:src="@drawable/statue"
            android:contentDescription="@string/todo">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Historical"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/architecture"
        android:layout_width="185dp"
        android:layout_height="185dp"
        app:cardBackgroundColor="#642f67"
        app:cardCornerRadius="22dp"
        app:contentPadding="12dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/furniture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal" >

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5sp"
            android:src="@drawable/architecture"
            android:contentDescription="@string/todo">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Architecture"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold">

        </TextView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>